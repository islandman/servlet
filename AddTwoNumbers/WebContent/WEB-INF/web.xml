<web-app>
  ...

  <filter>
    <filter-name>ControllerFilter</filter-name>
    <filter-class>com.example.ControllerFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>ControllerFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>ControllerServlet</servlet-name>
    <servlet-class>com.example.ControllerServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ControllerServlet</servlet-name>
    <url-pattern>/controller</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>ControllerResponseFilter</filter-name>
    <filter-class>com.example.ControllerResponseFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>ControllerResponseFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  ...
</web-app>
